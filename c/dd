#include<stdio.h>

void heap(int*,int,int);
void display(int*,int,int);

int main(){
    int n;
    printf("Enter the size of the heap : ");
    scanf("%d",&n);
    int arr[n];
    int* p=arr;
    for(int i=0;i<n;i++){
        int v;
        printf("Enter the value : ");
        scanf("%d",&v);
        heap(p,v,i);
    }
    printf("\nInput Min Heap : ");
    display(p,0,n-1);
}

void heap(int* a,int v, int i){
    if(i==0)
        a[0]=v;
    else{
        int parent=(i+1)/2-1;
        if(a[parent]<v)
            a[i]=v;
        else{
            a[i]=a[parent];
            a[parent]=v;
        }
    }
}

void display(int* arr,int s,int e){
    for(int i=s;i<=e;i++){
        printf("%d ",arr[i]);
    }
}

